<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPopup"
    android:orientation="vertical">


    <Button
        android:id="@+id/cancel_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timePicker"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:text="Cancel" />


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="272dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:theme="@style/time_picker_style"
        android:textAlignment="center"
        android:focusableInTouchMode="true"
        android:layout_marginTop="52dp"
        android:timePickerMode="spinner"></TimePicker>

    <EditText
        android:id="@+id/al_name"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/timePicker"
        android:layout_marginBottom="244dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="85dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/timePicker"
        android:layout_marginBottom="155dp"
        android:text="Tone :"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/alarm_tone"
        android:layout_width="176dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/timePicker"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="158dp" />

    <Button
        android:id="@+id/save_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timePicker"
        android:layout_alignTop="@+id/cancel_alarm"
        android:text="Save" />
</RelativeLayout>